<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono de carga -->
        <ImageView
            android:id="@+id/icono_carga"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:layout_marginEnd="16dp"
            app:tint="#4CAF50" />

        <!-- Información de la carga -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo_carga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casa - Carga lenta"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/txt_fecha_carga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Dic, 8:30 AM"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txt_info_carga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.9 kWh • 2h 35m"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Costo -->
        <TextView
            android:id="@+id/txt_costo_carga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12.45"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>