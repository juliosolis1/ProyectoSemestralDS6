<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_green"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial de Cargas"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas tus cargas registradas"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filtros -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_todos"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_filter_selected"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Todos"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_casa"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_filter_unselected"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Casa"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_estacion"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_filter_unselected"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="EstaciÃ³n"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_carga_lenta"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/button_filter_unselected"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Carga Lenta"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Lista de Cargas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_historial"
                android:layout_width="match_parent"
                android:layout_height="362dp"
                android:layout_marginBottom="80dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:elevation="8dp"
        app:menu="@menu/bottom_navigation" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_agregar_carga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/bottom_navigation"
        app:layout_anchorGravity="top|end"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>